<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/color_ffffff"
              android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_E5E5E5"></View>
    <RelativeLayout
        android:id="@+id/item_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:paddingLeft="@dimen/dimen_10"
        android:paddingRight="@dimen/dimen_14"
        android:paddingTop="@dimen/dimen_12">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/zheng_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_zheng"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen_2"
                android:paddingRight="@dimen/dimen_2"
                android:text="整"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/font_14"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/pei_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_pei"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen_2"
                android:paddingRight="@dimen/dimen_2"
                android:text="配"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/font_14"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/All_Ticket_Nol_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_8"
                android:singleLine="true"
                android:text="沪A00000"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/font_14"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_47"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="票数："
                    android:textSize="@dimen/font_12"
                    />

                <TextView
                    android:id="@+id/Ticket_Count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="@dimen/font_12"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1.2"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="挂车："
                    android:textSize="@dimen/font_12"
                    />

                <TextView
                    android:id="@+id/gua_car_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="沪A999999 挂"
                    android:textSize="@dimen/font_12"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_25"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="线路："
                android:textColor="#000000"
                android:textSize="@dimen/font_13"
                />

            <TextView
                android:id="@+id/Goods_Breed_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="#000000"
                android:text="上海-成都分公司"
                android:textSize="@dimen/font_13"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_70"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="件数："
                    android:textSize="@dimen/font_12"
                    />

                <TextView
                    android:id="@+id/Goods_Num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200件"
                    android:textSize="@dimen/font_12"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1.2"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="运费："
                    android:textSize="@dimen/font_12"
                    />

                <TextView
                    android:id="@+id/Shuttle_Fee_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="900yun"
                    android:textSize="@dimen/font_12"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_90"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发车时间："
                android:textSize="@dimen/font_12"
                />

            <TextView
                android:id="@+id/ReceiveMan_Tel_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-10-06"
                android:textSize="@dimen/font_12"
                />
        </LinearLayout>

        <Button
            android:id="@+id/operation_btn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="115dp"
            android:background="@drawable/shape_dr_take_goods_btn_ec6943"
            android:text="上 报 异 常"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/font_15"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_E5E5E5"></View>

</LinearLayout>