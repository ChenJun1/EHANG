<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="@dimen/dimen_22"
        android:layout_height="95dp"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dimen_18">

        <ImageView
            android:id="@+id/progress_state_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/non_arrival" />

        <View
            android:id="@+id/progress_v"
            android:layout_width="@dimen/dimen_2"
            android:layout_height="match_parent"
            android:layout_below="@+id/progress_state_iv"
            android:layout_gravity="center"
            android:background="@color/color_DEDEDE" />
    </LinearLayout>

    <LinearLayout

        android:layout_weight="4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dimen_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/arrive_address_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textSize="@dimen/font_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dimen_29"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/date1_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/reach_car_time"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/date1_value_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="--"
                    android:textSize="@dimen/font_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/date2_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/leave_time" />

                <TextView
                    android:id="@+id/date2_value_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="--" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/pic_ll"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/dimen_10">

        <TextView
            android:id="@+id/pic_tv"
            android:layout_width="@dimen/dimen_50"
            android:layout_height="@dimen/dimen_30"
            android:gravity="center"
            android:textColor="@drawable/tv_look_pic_font_style"
            android:textSize="@dimen/font_15"
            android:background="@drawable/setbar_tv_lookpic"
            android:text="@string/look"/>
    </LinearLayout>

</LinearLayout>