<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_rl"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/dimen_12"
        android:paddingBottom="@dimen/dimen_10"
        android:paddingLeft="@dimen/dimen_10"
        android:paddingRight="@dimen/dimen_14">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="货单号："
                android:textColor="@color/color_000000"
                android:textSize="@dimen/font_16" />

            <TextView
                android:id="@+id/All_Ticket_Nol_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10"
                android:maxWidth="@dimen/dimen_114"
                android:singleLine="true"
                android:text="0511013423234"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/font_16" />

            <TextView
                android:id="@+id/state_tv"
                android:layout_width="@dimen/dimen_35"
                android:layout_height="@dimen/dimen_16"
                android:layout_marginLeft="@dimen/dimen_13"
                android:background="@drawable/shape_rounded_tv_8dc15a_3"
                android:gravity="center"
                android:text="送货"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/font_11"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tihuo_tv"
                android:layout_width="@dimen/dimen_35"
                android:layout_height="@dimen/dimen_16"
                android:layout_marginLeft="@dimen/dimen_13"
                android:background="@drawable/shape_rounded_btn_eb6877"
                android:gravity="center"
                android:text="提货"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/font_11"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_40"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Goods_Breed_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服装" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_3"
                android:text="/" />

            <TextView
                android:id="@+id/Goods_Num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_3"
                android:text="200件" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_3"
                android:text="/" />

            <TextView
                android:id="@+id/Goods_Weight_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_3"
                android:text="2500kg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_3"
                android:text="/" />

            <TextView
                android:id="@+id/Bulk_Weight_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_3"
                android:text="30m³" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_64"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电话："
                 />

            <TextView
                android:id="@+id/ReceiveMan_Tel_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1232323223232"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_90"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地址：" />

            <TextView
                android:id="@+id/ReceiveMan_Address_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上海市 松江区 泗凯路 199 弄" />
        </LinearLayout>



        <Button
            android:id="@+id/operation_btn"
            android:layout_width="@dimen/dimen_64"
            android:layout_height="@dimen/dimen_64"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_14"
            android:layout_marginTop="@dimen/dimen_37"
            android:background="@drawable/shape_rounded_btn_2fc561"
            android:text="确认签收"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/font_13" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_E5E5E5"></View>
</LinearLayout>