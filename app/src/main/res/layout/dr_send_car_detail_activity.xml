<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#FAFAFA"
              android:orientation="vertical">

    <include layout="@layout/layout_head"></include>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_fafafa"></TextView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_E5E5E5"></View>

    <LinearLayout
        android:id="@+id/item_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dimen_10"
        android:paddingLeft="@dimen/dimen_10"
        android:paddingRight="@dimen/dimen_14"
        android:paddingTop="@dimen/dimen_12">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/zheng_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_zheng"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen_2"
                android:paddingRight="@dimen/dimen_2"
                android:text="整"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/dimen_13"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/pei_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_pei"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen_2"
                android:paddingRight="@dimen/dimen_2"
                android:text="配"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/dimen_13"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/All_Ticket_Nol_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_15"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/color_000000"
                android:textSize="@dimen/font_16"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="挂："
                android:textColor="#323232"/>

            <TextView
                android:id="@+id/gua_car_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_5"
                android:text=""
                android:textColor="#323232"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line_name_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/Line_Type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="线路："
                android:textColor="#323232"
                android:textSize="@dimen/dimen_13"/>

            <TextView
                android:id="@+id/line_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#000000"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Destination_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="目的地："
                android:textColor="#323232"/>

            <TextView
                android:id="@+id/Destination_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="#323232"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="票数："
                />

            <TextView
                android:id="@+id/Ticket_Count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="物品："
                />

            <TextView
                android:id="@+id/Goods_Num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="件"
                />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_3"
                android:text="/"/>

            <TextView
                android:id="@+id/Bulk_Weight_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_3"
                android:text="m³"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_3"
                android:text="/"
                />

            <TextView
                android:id="@+id/Goods_Weight_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_3"
                android:text="kg"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="运费："
                />

            <TextView
                android:id="@+id/Shuttle_Fee_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发车时间："
                />

            <TextView
                android:id="@+id/ReceiveMan_Tel_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_E5E5E5"></View>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/color_fafafa"></TextView>

    <ListView
        android:background="@color/color_fafafa"
        android:id="@+id/dr_line_follow_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:divider="@null">
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="@dimen/dimen_15"
        android:layout_marginTop="@dimen/dimen_15"
        android:orientation="horizontal">


            <Button
                android:layout_weight="1"
                android:id="@+id/daohang_bt"
                android:layout_width="0dp"
                style="?android:attr/borderlessButtonStyle"
                android:layout_height="40dp"
                android:layout_gravity="bottom|left"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginRight="5dp"
                android:background="@drawable/selector_send_car_detail_linefollow"
                android:text="路 线 跟 踪"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/font_17"
                android:visibility="gone"/>

            <Button
                android:layout_weight="1"
                android:id="@+id/operation_up_btn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/dimen_5"
                android:layout_marginRight="@dimen/dimen_10"
                android:background="@drawable/selector_send_car_uperror"
                android:text="上 报 异 常"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/font_17"
                android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>