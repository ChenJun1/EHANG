<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <include layout="@layout/layout_head_back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dimen_10"
        android:paddingLeft="@dimen/dimen_16"
        android:paddingTop="@dimen/dimen_10">

        <EditText
            android:id="@+id/Letter_Note_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_100"
            android:background="@null"
            android:gravity="top"
            android:hint="@string/import_select"
            android:textSize="@dimen/font_14" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_100">

        <ImageView
            android:id="@+id/imag"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/sign_photomo"
            android:visibility="gone" />

        <GridView
            android:id="@+id/noScrollgridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:horizontalSpacing="3dp"
            android:numColumns="3"
            android:scrollbars="none"
            android:verticalSpacing="5dp" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:background="@color/color_949494"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_38">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_12"
            android:text="到车时间"
            android:textColor="@color/color_000000" />

        <TextView
            android:id="@+id/Arrive_DateTime_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_16"
            android:text="2016-07-04 22:31:13"
            android:textColor="@color/color_000000" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:background="@color/color_949494"></View>

    <RelativeLayout
        android:id="@+id/arrived_node_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_38">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_12"
            android:text="到达节点"
            android:textColor="@color/color_000000" />

        <TextView
            android:id="@+id/arrived_node_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_30"
            android:hint="请选择节点"
            android:textColor="@color/color_000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_16"
            android:gravity="center_vertical"
            android:text=">"
            android:textSize="@dimen/font_16" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:background="@color/color_949494"></View>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/submit_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_41"
            android:layout_marginLeft="@dimen/dimen_24"
            android:layout_marginRight="@dimen/dimen_24"
            android:background="@drawable/shape_rounded_btn_ee852c_3"
            android:text="@string/dia_ok_str"
            android:textColor="@color/color_ffffff" />

    </LinearLayout>
</LinearLayout>