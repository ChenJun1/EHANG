<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/color_ffffff"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:paddingLeft="@dimen/dimen_13"
        android:paddingTop="@dimen/dimen_5">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="货单号："
                android:textColor="@color/color_000000"
                android:textSize="@dimen/font_16"/>

            <TextView
                android:id="@+id/waybill_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="150dp"
                android:singleLine="true"
                android:text="051102222222222222222222222222221"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/font_16"/>
        </LinearLayout>

        <TextView
            android:id="@+id/fullStatus_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_6"
            android:background="@drawable/rectangle"
            android:gravity="center"
            android:text="拆"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/font_12"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_25"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8">

                <TextView
                    style="@style/MyTextLable"
                    android:background="@drawable/shape_rounded_tv_f5bb4e_3"
                    android:gravity="center_vertical"
                    android:text="始"
                 />

                <TextView
                    android:id="@+id/sendCity_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:singleLine="true"
                    android:text="上海市"
                    android:textColor="@color/color_000000"
                    android:textSize="@dimen/font_14"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    style="@style/MyTextLable"
                    android:background="@drawable/shape_rounded_tv_8dc15a_3"
                    android:gravity="center"
                    android:text="终"
                  />

                <TextView
                    android:id="@+id/arriveCity_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:singleLine="true"
                    android:text="成都市"
                    android:textColor="@color/color_000000"
                    android:textSize="@dimen/font_14"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_50"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="品名："
                    android:textSize="@dimen/dimen_12"/>

                <TextView
                    android:id="@+id/Goods_Breed_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:singleLine="true"
                    android:text="服装"
                    android:textSize="@dimen/dimen_12"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Goods_Num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="20033件"
                    android:textSize="@dimen/dimen_12"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:text="/"
                    android:textSize="@dimen/dimen_12"/>

                <TextView
                    android:id="@+id/Goods_Weight_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:singleLine="true"
                    android:text="250330kg"
                    android:textSize="@dimen/dimen_12"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:text="/"

                    android:textSize="@dimen/dimen_12"/>

                <TextView
                    android:id="@+id/Bulk_Weight_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:singleLine="true"
                    android:text="330m³"
                    android:textSize="@dimen/dimen_12"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_70"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发货时间："
                android:textSize="@dimen/dimen_12"/>

            <TextView
                android:id="@+id/Delegate_DateTime_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-07-05 9:53:10"
                android:textSize="@dimen/dimen_12"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_E5E5E5"></View>
</LinearLayout>