<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/task_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_list_view_line"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:paddingBottom="@dimen/dimen_15"
        android:paddingLeft="@dimen/dimen_15"
        android:paddingRight="@dimen/dimen_15"
        android:paddingTop="@dimen/dimen_15">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/CarCode_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="沪A2323234"
                    android:textColor="#000000"
                    android:textSize="@dimen/font_16" />

                <Button
                    android:id="@+id/zhengche_btn"
                    android:layout_width="28dp"
                    android:layout_height="14dp"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:background="@drawable/shape_rounded_tv_8dc15a_state"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dimen_2"
                    android:paddingRight="@dimen/dimen_2"
                    android:text="派车"
                    android:textColor="#ffffff"
                    style="?android:attr/borderlessButtonStyle"
                    android:textSize="10dp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/peizai_btn"
                    android:layout_width="28dp"
                    android:layout_height="14dp"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:background="@drawable/shape_rounded_btn_3a95e7"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dimen_2"
                    android:paddingRight="@dimen/dimen_2"
                    android:text="配载"
                    android:textColor="#ffffff"
                    style="?android:attr/borderlessButtonStyle"
                    android:textSize="10dp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_7"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="挂："
                    android:textColor="@color/color_949494"
                    android:textSize="@dimen/font_12" />

                <TextView
                    android:id="@+id/BoxCarCode_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="沪A122334"
                    android:textColor="@color/color_949494"
                    android:textSize="@dimen/font_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_7"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="票数："
                        android:textColor="@color/color_949494"
                        android:textSize="@dimen/font_12" />

                    <TextView
                        android:id="@+id/Ticket_Count_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2票"
                        android:textColor="@color/color_949494"
                        android:textSize="@dimen/font_12" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.6">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="件数："
                        android:textColor="@color/color_949494"
                        android:textSize="@dimen/font_12" />

                    <TextView
                        android:id="@+id/Goods_Num_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20002件"
                        android:textColor="@color/color_949494"
                        android:textSize="@dimen/font_12" />
                </LinearLayout>
            </LinearLayout>


            <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="@dimen/dimen_7"-->
            <!--android:orientation="horizontal">-->

            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="运费："-->
            <!--android:textColor="@color/color_949494" />-->

            <!--<TextView-->
            <!--android:id="@+id/Shuttle_Fee_tv"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="800元"-->
            <!--android:textColor="@color/color_949494" />-->
            <!--</LinearLayout>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_7"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发车时间："
                    android:textColor="@color/color_949494"
                    android:textSize="@dimen/font_12" />

                <TextView
                    android:id="@+id/Letter_Date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016/05/12"
                    android:textColor="@color/color_949494"
                    android:textSize="@dimen/font_12" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TicketStatus_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="未完成"
                android:textColor="@color/color_83B9EF"
                android:textSize="@dimen/font_16" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dimen_45">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textColor="@color/color_f66c29"
                android:textSize="@dimen/font_16" />

            <TextView
                android:id="@+id/Shuttle_Fee_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="800"
                android:textColor="@color/color_f66c29"
                android:textSize="@dimen/font_16" />

            <TextView
                android:id="@+id/AllReceivableAccount_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2000"
                android:textColor="@color/color_f66c29"
                android:textSize="@dimen/font_18"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_3"
                android:text="元"
                android:textColor="@color/color_f66c29"
                android:textSize="@dimen/font_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dimen_70">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="运费"
                android:textColor="@color/color_949494"
                android:textSize="@dimen/font_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="应收款"
                android:textSize="@dimen/dimen_14"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_list_view_line"></View>


</LinearLayout>
