<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/layout_head_back"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/last_day_rl"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_44"
            android:layout_weight="1"
            android:background="@drawable/layout_water_ripple">

            <TextView
                android:id="@+id/no_start_car_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/unfinished_no_start_car"/>

            <TextView
                android:text="0"
                android:layout_marginLeft="5dp"
                android:id="@+id/no_tstart_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/no_start_car_text"
                android:gravity="center"
                />

            <View
                android:id="@+id/no_start_car_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_3"
                android:layout_alignParentBottom="true"
                android:background="@color/color_218ad5"/>
        </RelativeLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="@dimen/dimen_43"
            android:background="@color/color_d5d5d5"/>

        <RelativeLayout
            android:id="@+id/last_three_days_rl"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_44"
            android:layout_weight="1"
            android:background="@drawable/layout_water_ripple">

            <TextView
                android:id="@+id/in_transit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/unfinished_in_transit"/>

            <TextView
                android:text="0"
                android:layout_marginLeft="5dp"
                android:id="@+id/transport_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/in_transit_text"
                android:gravity="center"
                />

            <View
                android:id="@+id/in_transit_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_3"
                android:layout_alignParentBottom="true"
                android:background="@color/color_F5F4F7"/>
        </RelativeLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="@dimen/dimen_43"
            android:background="@color/color_d5d5d5"/>

        <RelativeLayout
            android:id="@+id/last_month_rl"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_44"
            android:layout_weight="1"
            android:background="@drawable/layout_water_ripple">

            <TextView
                android:id="@+id/delivery_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/unfinished_delivery"/>

            <TextView
                android:text="0"
                android:layout_marginLeft="5dp"
                android:id="@+id/delivery_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/delivery_text"
                android:gravity="center"
               />

            <View
                android:id="@+id/delivery_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_3"
                android:layout_alignParentBottom="true"
                android:background="@color/color_F5F4F7"/>
        </RelativeLayout>

    </LinearLayout>

    <View
        android:id="@+id/id_tab_line_iv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_3"
        android:layout_alignParentBottom="true"
        android:background="@color/color_218ad5"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_list_view_line"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>
