<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_head_back"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_10">

        <EditText
            android:id="@+id/feedback_et"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/feedback_edit_bg"
            android:gravity="top"
            android:hint="期待您的反馈以及建议"
            android:maxLength="300"
            android:text=""
            android:textCursorDrawable="@drawable/edit_curor"
            android:textSize="@dimen/font_13" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/commit_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_41"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dimen_24"
            android:layout_marginRight="@dimen/dimen_24"
            android:background="@drawable/shape_rounded_btn_fd9a27_2"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/color_ffffff" />
    </RelativeLayout>


</LinearLayout>
