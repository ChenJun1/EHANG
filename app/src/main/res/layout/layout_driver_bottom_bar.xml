<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:gravity="center"
    android:background="#FCFCFC"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/d_homepager_rl"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical" >
            <ImageView
                android:id="@+id/d_homepager_iv"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:background="@drawable/home_focused"/>
            <TextView
                android:id="@+id/d_homepager_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="12sp"
                android:text="首页"
                android:textColor="#3a95e7" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/d_addressbook_rl"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/d_addressbook_iv"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/tongxunlu_unfocused"/>
            <TextView
                android:id="@+id/d_addressbook_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="12sp"
                android:text="通讯录"
                android:textColor="#7B7873" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/d_me_rl"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/d_me_iv"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/wo_unfocused"/>
            <TextView
                android:id="@+id/d_me_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="12sp"
                android:text="我"
                android:textColor="#7B7873" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>