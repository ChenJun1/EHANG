<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/color_ffffff"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="@dimen/dimen_22"
        android:layout_height="95dp"
        android:layout_marginLeft="@dimen/dimen_18"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/progress_state_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/arrived"/>

        <View
            android:id="@+id/progress_v"
            android:layout_width="@dimen/dimen_2"
            android:layout_height="match_parent"
            android:layout_below="@+id/progress_state_iv"
            android:layout_gravity="center"
            android:background="@color/color_71B2EE"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dimen_20"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Goods_DateTime_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2003232322"
            android:textColor="@color/color_71B2EE"
            android:textSize="@dimen/font_15"/>

            <TextView
                android:id="@+id/Operate_Description_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_marginBottom="@dimen/dimen_10"
                android:text="asdadadadadaa"
                android:autoLink="phone"
                android:textColor="@color/color_71B2EE"
                android:textSize="@dimen/font_15"/>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/pic_ll"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/dimen_10">

        <TextView
            android:id="@+id/pic_tv"
            android:layout_width="@dimen/dimen_50"
            android:layout_height="@dimen/dimen_30"
            android:background="@drawable/setbar_tv_lookpic"
            android:gravity="center"
            android:text="@string/look"
            android:textColor="@drawable/tv_look_pic_font_style"
            android:textSize="@dimen/font_15"/>
    </LinearLayout>

</LinearLayout>