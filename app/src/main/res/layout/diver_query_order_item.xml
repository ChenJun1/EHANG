<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dimen_12"
        android:background="?android:attr/selectableItemBackground"
        android:paddingTop="@dimen/dimen_12">

        <LinearLayout
            android:id="@+id/order_num_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/order_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_11"
                android:text="货单号："
                android:textColor="@color/color_000000"
                android:textSize="@dimen/font_16"/>

            <TextView
                android:id="@+id/consignee_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123456"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/font_15"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_num_ll"
            android:layout_marginTop="@dimen/dimen_12"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.50"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_11"
                    android:background="@drawable/shape_rounded_tv_f5bb4e_3"
                    android:gravity="center"
                    android:text="始"
                    android:paddingLeft="@dimen/dimen_2"
                    android:paddingRight="@dimen/dimen_2"
                    android:textColor="@color/color_ffffff"
                    android:textSize="@dimen/font_12"/>

                <TextView
                    android:id="@+id/begin_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:text="上海市上海市"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:maxLength="6"
                    android:textColor="@color/color_000000"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_rounded_tv_8dc15a_3"
                    android:gravity="center"
                    android:text="终"
                    android:paddingLeft="@dimen/dimen_2"
                    android:paddingRight="@dimen/dimen_2"
                    android:textColor="@color/color_ffffff"
                    android:textSize="@dimen/font_12"
                    android:id="@+id/textView" />

                <TextView
                    android:id="@+id/receive_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:text="上海市上海市上海市上海市"
                    android:maxLength="6"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="@color/color_000000"/>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/pin_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_place"
            android:layout_marginTop="@dimen/dimen_11"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_11"
                android:layout_weight="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_13"
                    android:text="品名："/>

                <TextView
                    android:id="@+id/pinming_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textSize="@dimen/font_13"
                    android:text="服装"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200件"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_13"
                    android:text="/"/>

                <TextView
                    android:id="@+id/weight_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="2500kg"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_13"
                    android:text="/"/>

                <TextView
                    android:id="@+id/space_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="@dimen/font_13"
                    android:text="30m³"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/time_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pin_ll"
            android:layout_marginTop="@dimen/dimen_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_11"
                android:textSize="@dimen/font_13"
                android:text="发货时间："/>

            <TextView
                android:id="@+id/reconmend_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_13"
                android:text="2016-07-05 9:53:10"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="@dimen/dimen_20"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true">

            <LinearLayout
                android:id="@+id/total_fee_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/count_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5000"
                        android:textColor="@color/color_fb9111"
                        android:textSize="@dimen/font_21"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="元"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dimen_5"
                        android:textColor="@color/color_fb9111"
                        android:textSize="@dimen/font_16"
                        android:id="@+id/textView3" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dimen_3"
                    android:text="总运费"
                    android:textSize="@dimen/font_12"
                    android:id="@+id/textView4" />

            </LinearLayout>

            <TextView
                android:id="@+id/sign_state_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_10"
                android:text="@string/driver_home_order_detail_weiqianshou"
                android:visibility="gone"
                android:textColor="#3491e6"/>
        </LinearLayout>


    </RelativeLayout>


</LinearLayout>