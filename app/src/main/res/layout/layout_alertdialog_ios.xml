<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lLayout_bg"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/alert_ios_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/custom_dialog_top_bottom_margin"
        android:layout_marginLeft="@dimen/custom_dialog_left_right_margin"
        android:layout_marginRight="@dimen/custom_dialog_left_right_margin"
        android:layout_marginTop="@dimen/custom_dialog_top_bottom_margin"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="title"
            android:textColor="#141414"
            android:textSize="@dimen/custom_dialog_title_size" />

        <TextView
            android:id="@+id/txt_msg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="1.5dip"
            android:gravity="center"
            android:text="message"
            android:textColor="#141414"
            android:textSize="@dimen/custom_dialog_msg_size" />
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/alertdialog_line" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_neg"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/custom_dialog_btn_heigt"
            android:layout_weight="1"
            android:background="@drawable/trans_bg"
            android:gravity="center"
            android:text="@string/dia_cancel_str"
            android:textColor="#037bff"
            android:textSize="@dimen/custom_dialog_title_size" />

        <ImageView
            android:id="@+id/img_line"
            android:layout_width="0.5dp"
            android:layout_height="@dimen/custom_dialog_btn_heigt"
            android:background="@color/alertdialog_line" />

        <Button
            android:id="@+id/btn_pos"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/custom_dialog_btn_heigt"
            android:layout_weight="1"
            android:background="@drawable/trans_bg"
            android:gravity="center"
            android:text="@string/dia_ok_str"
            android:textColor="#037bff"
            android:textSize="@dimen/custom_dialog_title_size" />
    </LinearLayout>

</LinearLayout>