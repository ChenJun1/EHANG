<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dimen_13"
        android:paddingLeft="@dimen/dimen_12"
        android:paddingRight="@dimen/dimen_12"
        android:paddingTop="@dimen/dimen_10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center">

                <TextView
                    android:id="@+id/type_btn"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:background="@drawable/shape_rounded_btn_8ddc8c"
                    android:text="整"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/dimen_7"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/font_10" />

                <TextView
                    android:id="@+id/license_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="沪A0983"
                    android:textColor="#000000" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/state_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_14"
                    android:text="未配载"
                    android:textColor="#fb9a26"
                    android:textSize="@dimen/dimen_13" />

                <TextView
                    android:id="@+id/order_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/placeholder1"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#ffffff" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="挂：" />


            <TextView
                android:id="@+id/BoxCarCode_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_5"
                android:text="" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_2"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/line_btn"
                android:layout_width="@dimen/dimen_14"
                android:layout_height="@dimen/dimen_14"
                android:layout_marginRight="@dimen/dimen_5"
                android:visibility="gone"
                android:text="asdfasfs"
                android:textColor="#ffffff"
                android:textSize="@dimen/font_10" />

            <TextView
                android:id="@+id/route_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发车日期："
                    android:textColor="#818181"
                    android:textSize="@dimen/dimen_12" />

                <TextView
                    android:id="@+id/scheduleDate_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:textColor="#818181"
                    android:textSize="@dimen/dimen_10" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/send_real"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/preDeparture_tv"
                    android:text="实际发车："
                    android:textColor="#818181"
                    android:textSize="@dimen/dimen_12" />

                <TextView
                    android:id="@+id/preDeparture_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="#818181"
                    android:textSize="@dimen/dimen_10" />


            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#d9d9d9"></View>


</LinearLayout>